{
  "manifest_version": 3,
  "name": "image-fetcher",
  "version": "1.0.0",
  "description": "Webページから画像を収集してFigmaに送信",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
